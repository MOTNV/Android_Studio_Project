<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/surface"
        android:paddingStart="@dimen/space_md"
        android:paddingEnd="@dimen/space_md"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@color/onSurface" />

    <!-- Step 1: Start Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardStart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/space_md"
        android:paddingEnd="@dimen/space_md"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/startSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/start_desc"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/subtleText"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/anonIdStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/subtleText"
            android:maxLines="1"
            android:ellipsize="middle"
            tools:text="anon-3af14c92"
            app:layout_constraintTop_toBottomOf="@id/startSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonHistory"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/space_sm"
            android:text="@string/history_button"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="16sp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1.5dp"
            app:cornerRadius="@dimen/button_radius"
            app:layout_constraintTop_toBottomOf="@id/anonIdStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStart"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginBottom="@dimen/space_md"
            android:text="@string/start_button"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="@color/primary"
            android:textColor="@color/onPrimary"
            app:cornerRadius="@dimen/button_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Step 2: Compose -->
    <ScrollView
        android:id="@+id/groupAssist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:paddingStart="@dimen/space_md"
        android:paddingEnd="@dimen/space_md"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/analysisTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/analysis_title"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/onSurface"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/space_md" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:text="@string/analysis_subtitle"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/onSurface" />

            <TextView
                android:id="@+id/anonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@color/subtleText"
                android:maxLines="1"
                android:ellipsize="middle"
                tools:text="anon-3af14c92" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="@dimen/space_sm"
                app:cardBackgroundColor="@color/chipNeutral"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/messageInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/message_hint"
                    android:background="@android:color/transparent"
                    android:gravity="top|start"
                    android:padding="@dimen/space_md"
                    android:textSize="16sp"
                    android:textColor="@color/onSurface"
                    android:textColorHint="@color/subtleText"
                    android:inputType="textMultiLine"
                    android:minLines="6" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:background="@drawable/ic_lock_small"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:background="@drawable/ic_lock_small"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:background="@drawable/ic_lock_small"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/space_xs"
                    android:background="@drawable/ic_lock_small"
                    android:alpha="0.3" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_lock_small"
                    android:alpha="0.3" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:cardBackgroundColor="@color/chipNeutral"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/analysis_recipient_placeholder"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/subtleText"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        app:singleLine="true"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/routingRecipient"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/analysis_recipient_placeholder"
                            app:chipBackgroundColor="@color/chipPrimary"
                            app:chipStrokeColor="@color/chipBorder"
                            app:chipStrokeWidth="1dp"
                            android:textColor="@color/onSurface" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/routingCategory"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/analysis_category_placeholder"
                            app:chipBackgroundColor="@color/chipNeutral"
                            app:chipStrokeColor="@color/chipBorder"
                            app:chipStrokeWidth="1dp"
                            android:textColor="@color/onSurface" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/routingPriority"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/analysis_priority_placeholder"
                            app:chipBackgroundColor="@color/chipAccent"
                            app:chipStrokeColor="@color/chipBorder"
                            app:chipStrokeWidth="1dp"
                            android:textColor="@color/onSurface" />
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/routingKeywords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        android:text="@string/analysis_keyword_placeholder"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/subtleText"
                        android:maxLines="3"
                        android:ellipsize="end" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                android:layout_marginBottom="@dimen/space_md"
                android:text="@string/analysis_confirm"
                android:textAllCaps="false"
                app:backgroundTint="@color/primary"
                android:textColor="@color/onPrimary" />
        </LinearLayout>
    </ScrollView>

    <!-- Step 3: Recommendation Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/groupChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:paddingStart="@dimen/space_md"
        android:paddingEnd="@dimen/space_md"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/recommendTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:text="@string/recommend_title"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/onSurface"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_sm"
            app:layout_constraintTop_toBottomOf="@+id/recommendTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_recommendation" />

        <TextView
            android:id="@+id/emptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommend_empty"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/subtleText"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
