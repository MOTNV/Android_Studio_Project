<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".settings.SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/surface"
        android:paddingStart="@dimen/space_md"
        android:paddingEnd="@dimen/space_md"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/settings_title"
        app:titleTextColor="@color/onSurface" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/space_md"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_sm"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation"
                app:contentPadding="@dimen/space_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_current_info"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/onSurface"
                        android:textStyle="bold" />

                    <!-- Name Section -->
                    <LinearLayout
                        android:id="@+id/nameSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_user_name"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/subtleText"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/onSurface"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="익명 사용자" />
                    </LinearLayout>

                    <!-- Email Section -->
                    <LinearLayout
                        android:id="@+id/emailSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_user_email"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/subtleText"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="@color/onSurface"
                                android:maxLines="1"
                                android:ellipsize="end"
                                tools:text="professor@university.ac.kr" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/copyEmail"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_copy"
                                android:textAllCaps="false"
                                android:minWidth="0dp"
                                android:paddingStart="@dimen/space_sm"
                                android:paddingEnd="@dimen/space_sm"
                                android:textColor="@color/primary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Anonymous ID Section (for students) -->
                    <LinearLayout
                        android:id="@+id/anonIdSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_anon_id"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/subtleText"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/currentAnonId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="@color/onSurface"
                                android:maxLines="1"
                                android:ellipsize="middle"
                                tools:text="anon-1234567890" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/copyAnonId"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_copy"
                                android:textAllCaps="false"
                                android:minWidth="0dp"
                                android:paddingStart="@dimen/space_sm"
                                android:paddingEnd="@dimen/space_sm"
                                android:textColor="@color/primary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/space_md"
                        android:layout_marginBottom="@dimen/space_sm"
                        android:background="@color/divider" />

                    <!-- Role Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/role_current"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/subtleText"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/currentRoleSettings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/onSurface"
                            android:textStyle="bold"
                            tools:text="상담자" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRoleLogin"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:text="@string/role_login_title"
                        android:textAllCaps="false"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonLogout"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        android:text="@string/settings_logout"
                        android:textAllCaps="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOverride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/card_elevation"
                app:contentPadding="@dimen/space_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_override_title"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/onSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        android:text="@string/settings_override_desc"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/subtleText" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:hint="@string/settings_input_hint"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputAnonId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/applyAnonId"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:text="@string/settings_apply"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/primary"
                        android:textColor="@color/onPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
